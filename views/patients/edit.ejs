<!DOCTYPE html>
<html>
<head>
  <title>Edit Patient</title>
</head>
<body>
  <h1>Edit Patient</h1>

  <form action="/patients/update/<%= patient.id %>" method="POST">
    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" value="<%= patient.firstName %>"><br><br>

    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" value="<%= patient.lastName %>"><br><br>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= patient.email %>"><br><br>

    <label for="phone">Phone:</label>
    <input type="text" id="phone" name="phone" value="<%= patient.phone %>"><br><br>

    <label for="dateOfBirth">Date of Birth:</label>
    <input type="date" id="dateOfBirth" name="dateOfBirth" value="<%= patient.dateOfBirth %>"><br><br>

    <label for="gender">Gender:</label>
    <select id="gender" name="gender">
      <option value="male" <%= patient.gender === 'male' ? 'selected' : '' %>>Male</option>
      <option value="female" <%= patient.gender === 'female' ? 'selected' : '' %>>Female</option>
      <option value="other" <%= patient.gender === 'other' ? 'selected' : '' %>>Other</option>
    </select><br><br>

    <label for="address">Address:</label>
    <textarea id="address" name="address"><%= patient.address %></textarea><br><br>

    <button type="submit">Update Patient</button>
  </form>
</body>
</html>